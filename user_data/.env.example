# FreqTrade Exchange API Configuration
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!

# Kraken API (US-legal, recommended)
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_API_SECRET=your_kraken_secret

# Coinbase Advanced Trade API (US-legal)
# Note: Coinbase now uses CDP format with EC private keys
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_API_SECRET=your_coinbase_secret

# Telegram Bot (for trade notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Data Feeds (optional, for market intelligence)
COINGLASS_API_KEY=your_coinglass_key
COINGECKO_API_KEY=your_coingecko_pro_key
CRYPTOCOMPARE_API_KEY=your_cryptocompare_key

